{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "es2015",
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src"],
}
